{
  "name": "Backstack Demo",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false,
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/kind:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/argo-cd:1": {},
    "ghcr.io/devcontainers-extra/features/kyverno-cli:1": {},
    "ghcr.io/joebowbeer/devcontainers-features/crossplane:1": {
      "channel": "stable",
      "version": "current"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "forwardPorts": [443],
  "portsAttributes": {
    "443": {
      "label": "Backstage",
      "onAutoForward": "notify"
    }
  },
  "remoteEnv": {
    "NODE_OPTIONS": "--max_old_space_size=8192 --no-node-snapshot",
    "NODE_TLS_REJECT_UNAUTHORIZED": "0"
  }
}
